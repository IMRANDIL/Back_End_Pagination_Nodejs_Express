<%- include('../partials/head.ejs') %>
    <!-- <h1>Express_Pagination</h1> -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item mx-4">
                        <a class="nav-link active text-danger" aria-current="page" href="/">Back To Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="/add-product">Add Product</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row p-5">
            <!-- products -->
            <% for(let item of result) {%>

                <div class="col-md-4">
                    <div class="p-4">
                        <div class="card">
                            <img src="<%= item.cover %>" class="card-img-top" alt="<%= item.category %> img">
                            <div class="card-body">
                                <h3 class="card-title">
                                    <%=item.name %>
                                </h3>
                                <p class="card-text">
                                    <%= item.category %>
                                </p>
                                <p class="card-text">
                                    $<%= item.price %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>



                <% } %>

        </div>
        <div class="row ">
            <% if(pages) { %>
                <nav class="mx-auto" style="margin: 0 auto;">
                    <ul class="pagination nav justify-content-center">
                        <!-- First-Page -->
                        <% if(current===1) { %>
                            <li class="page-item disabled">
                                <a href="#" class="page-link">First Page</a>
                            </li>
                            <% } else{%>
                                <li class="page-item">
                                    <a href="/products/1" class="page-link">First</a>
                                </li>
                                <% } %>
                                    <!-- First-Page-End -->

                                    <!-- Pages -->

                                    <% let i=(Number(current)>5 ? Number(current) - 4 : 1) %>

                                        <% if(i !==1){ %>
                                            <a href="#" class="page-link">...</a>
                                            <% } %>

                                                <% for(; i <=(Number(current)+4) && i <=pages; i++){ %>

                                                    <% if(i===current) {%>
                                                        <li class="page-item">
                                                            <a href="<%=i %>" class="page-link">
                                                                <%=i %>
                                                            </a>
                                                        </li>
                                                        <% }else{ %>


                                                            <li class="page-item">
                                                                <a href="/products/<%=i %>" class="page-link">
                                                                    <%= i %>
                                                                </a>
                                                            </li>

                                                            <% } %>

                                                                <% if(i===Number(current)+ 4 && i< pages){%>

                                                                    <li class="page-item">
                                                                        <a href="#" class="page-link">...</a>
                                                                    </li>

                                                                    <% } %>


                                                                        <% } %>



                                                                            <!-- Last Page -->
                                                                            <% if(current===pages) { %>

                                                                                <li class="page-item disabled">
                                                                                    <a href="#" class="page-link">Last
                                                                                        Page</a>
                                                                                </li>

                                                                                <% } else{ %>
                                                                                    <li class="page-item">
                                                                                        <a href="/products/<%= pages %>"
                                                                                            class="page-link">Last</a>
                                                                                    </li>
                                                                                    <% } %>
                    </ul>
                </nav>

                <% } %>
        </div>
    </div>


    <%- include('../partials/footer.ejs') %>