<%- include('../partials/head.ejs') %>
    <!-- <h1>Express_Pagination</h1> -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item mx-4">
                        <a class="nav-link active text-danger" aria-current="page" href="/">Back To Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="/add-product">Add Product</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row p-5">
            <!-- products -->
            <% for(let item of result) {%>

                <div class="col-md-4">
                    <div class="p-4">
                        <div class="card">
                            <img src="<%= item.cover %>" class="card-img-top" alt="<%= item.category %> img">
                            <div class="card-body">
                                <h3 class="card-title">
                                    <%=item.name %>
                                </h3>
                                <p class="card-text">
                                    <%= item.category %>
                                </p>
                                <p class="card-text">
                                    $<%= item.price %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>



                <% } %>

        </div>
    </div>


    <%- include('../partials/footer.ejs') %>